<Board>:
    tsize: min((self.width-2*self.hmargin)/self.ncols, (self.height-2*self.wmargin)/self.nrows)
    tx : (self.width - self.tsize*self.ncols)/2.0
    ty : (self.height - self.tsize*self.nrows)/2.0

<Tile>:
    x: self.board.x + self.board.tx + self.col*self.board.tsize 
    y: self.board.y + self.board.ty + self.row*self.board.tsize
    canvas:
        Color: 
            rgba: 0,0,0,1
        Rectangle:
            pos: root.pos
            size: (root.board.tsize, root.board.tsize)
        Color:
            rgba: root.rgba
        Rectangle:
            pos: root.x+root.board.tmargin, root.y+root.board.tmargin
            size: root.board.tsize-2*root.board.tmargin, root.board.tsize-2*root.board.tmargin

BoxLayout:
    orientation: "vertical"
    Board:
        id:board
    BoxLayout:
        size_hint_y: None
        height: sp(50)

        Button:
            text: "Haut"
            on_release: print("Haut")

        Button:
            text: "Bas"
            on_release: print("Bas")

        Button:
            text: "Gauche"
            on_release: print("Gauche")

        Button:
            text: "Droite"
            on_release: print("Droite")